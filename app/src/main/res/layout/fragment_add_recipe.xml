<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RecipeFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_all_acivity">

        <LinearLayout
            android:id="@+id/addRecipeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create recipe"
                android:fontFamily="@font/dongle_regular"
                android:textSize="60sp"
                android:textColor="@color/own_red"
                android:gravity="center"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="name"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/own_red"
                    app:boxBackgroundColor="@color/white"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:startIconDrawable="@drawable/recipe_name"
                    app:startIconTint="@color/own_red"
                >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMeal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="50"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="meal thumbnail"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/own_red"
                    app:boxBackgroundColor="@color/white"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxStrokeWidth="0dp"
                    app:startIconDrawable="@drawable/image"
                    app:startIconTint="@color/own_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMealThumb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="50"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="youtube video"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/own_red"
                    app:boxBackgroundColor="@color/white"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxStrokeWidth="0dp"
                    app:startIconDrawable="@drawable/film"
                    app:startIconTint="@color/own_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextYoutube"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="50"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="instructions"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/own_red"
                    app:boxBackgroundColor="@color/white"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxStrokeWidth="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:lines="10" />
                </com.google.android.material.textfield.TextInputLayout>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/areaSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />

                <ImageView
                    android:id="@+id/imageViewUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add ingredients"
                android:fontFamily="@font/dongle_regular"
                android:textSize="40sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/own_red"
                android:gravity="center"/>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/ingredientsSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addIngredientButton1"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:text="chosen"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/own_red"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addIngredientButton2"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/addIngredientButton1"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:text="empty"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/own_red"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/addIngredientsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:backgroundTint="#ae0216" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/loadImageButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_login"
                    android:src="@drawable/add_image"
                    android:textColor="@color/white" />


                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/addRecipeSubmitButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="95dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_toEndOf="@+id/loadImageButton"
                    android:background="@drawable/button_login"
                    android:src="@drawable/save"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editTextYoutubeInputLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:hint="search"
                    app:hintTextColor="@color/own_red"
                    app:boxBackgroundColor="@color/white"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:startIconDrawable="@drawable/yt_search"
                    app:startIconTint="@color/own_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextSearchOnYoutube"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="50"
                        android:imeOptions="actionSearch"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

                <LinearLayout
                    android:id="@+id/youtubeVideosLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="20dp" />


        </LinearLayout>
        </ScrollView>

    </FrameLayout>
</layout>